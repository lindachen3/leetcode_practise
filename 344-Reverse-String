    public String reverseString(String s) {
        StringBuilder sb = new StringBuilder(s);
        int len = s.length()-1;
        for(int i=len; i>=0; i--){
            sb.setCharAt(len-i,s.charAt(i));
        }
        return sb.toString();
    }

//2nd round
public class Solution {
    public String reverseString(String s) {
        return new StringBuilder(s).reverse().toString();
    }
}
