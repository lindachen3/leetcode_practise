public class Solution {
    public boolean isPalindrome(String s) {
        s = s.toLowerCase();
        int j = s.length()-1;
        if(j==-1){
            return true;
        }
        for(int i=0; i<s.length(); i++){
            if(!Character.isLetterOrDigit(s.charAt(i)))
                continue;
            while(!Character.isLetterOrDigit(s.charAt(j))){
                j--;
            }
            if(i>j){
                break;
            }
            if(s.charAt(i)!=s.charAt(j)){
                return false;
            }
            if(j>0)
                j--;
        }
        return true;
    }
}
