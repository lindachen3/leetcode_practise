    */
    /*
    public boolean isPerfectSquare(int num) {
        for(int i=1; i<=num/i; i++){
            if(i*i == num){
                return true;
            }
        }
        return false;
    }
    */
    public boolean isPerfectSquare(int num) {
        long left = 0, right = num;
        while(left<=right){
            long mid = left + (right - left)/2;
            long t = mid * mid;
            if(t == num){
                return true;
            } else if(t > num){
                right = mid - 1;
            } else {
                left = mid + 1;
            }
        }
        return false;
    }
}
